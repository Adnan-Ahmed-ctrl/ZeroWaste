        <div class="row" style="justify-content: center;">
          <div class="col-md-6 order-md-1">
            <form action="/help" method="POST" enctype="multipart/form-data">
              <div class="row">
                
                <div class="mb-2">
                  <label class="form-label" for="validationCustomUsername">Full Organization Name</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="inputGroupPrepend">
                        <img class="d-block mx-auto" src="/img/userIcon.png" alt="" width="30" height="30">
                      </span>
                    </div>
                      <input type="text" class="form-control" id="validationCustomUsername" id="name" name="name" placeholder="Username" aria-describedby="inputGroupPrepend" required>
                      <div class="invalid-feedback">
                      Please choose a username.
                    </div>
                  </div>
                </div>

                  <div class="mb-2 ">
                  <label class="form-label" for="validationCustomUsername">Phone</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="inputGroupPrepend">
                        <img class="d-block mx-auto" src="/img/phone-icon.jpg" alt="" width="30" height="30"> <span class="input-group-prepend">+251</span>
                      </span>
                    </div>

                    
                    <input type="tel" class="form-control" id="validationCustomUsername" id="number" name="number" placeholder="251910101010" maxlength="9" placeholder="Username" aria-describedby="inputGroupPrepend" required>
                      <div class="invalid-feedback">
                      Please choose a username.
                    </div>
                  </div>
                </div>

                <div class="mb-2">
                  <label class="form-label" for="validationCustomUsername">Email</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="inputGroupPrepend">
                        <img class="d-block mx-auto" src="/img/icon-email.jpg" alt="" width="30" height="30">
                      </span>
                    </div>
                    
                    <input type="email" class="form-control" id="validationCustomUsername" id="email" name="email" placeholder="email@example.com" aria-describedby="inputGroupPrepend">
                      <div class="invalid-feedback">
                      Please choose a username.
                    </div>
                  </div>
                </div>

                <div class="mb-2">
                  <label class="form-label" for="validationCustomUsername">Address</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="inputGroupPrepend">
                        <img class="d-block mx-auto" src="/img/address.png" alt="" width="30" height="30">
                      </span>
                    </div>
                    <input type="address" class="form-control" id="validationCustomUsername" id="address" name="address" placeholder="" aria-describedby="inputGroupPrepend" required>
                      <div class="invalid-feedback">
                      Please choose a username.
                    </div>
                  </div>
                </div>
                
                <hr class="mb-4"> 

                <div class="mb-2">
                  <label class="form-label" for="validationCustomUsername">Number of person</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="inputGroupPrepend">
                        <img class="d-block mx-auto" src="/img/people.jpg" alt="" width="30" height="30">
                      </span>
                    </div>
                    <input type="number" class="form-control" id="validationCustomUsername" id="person" name="person" placeholder="number" min="10" aria-describedby="inputGroupPrepend" required>
                      <div class="invalid-feedback">
                      Please choose a username.
                    </div>
                  </div>
                </div>


                <div class="mb-2">
                  <label class="form-label" for="validationCustomUsername">Bank Account</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="inputGroupPrepend">
                        <img class="d-block mx-auto" src="/img/bank.png" alt="" width="40" height="30">
                      </span>
                    </div>
                    <input type="tel" class="form-control" id="validationCustomUsername" id="account" name="account" placeholder="account" min="10" aria-describedby="inputGroupPrepend" required>
                      <div class="invalid-feedback">
                      Please choose a username.
                    </div>
                  </div>
                </div>


                
              <hr class="mb-4">

              <div clas="mb-2">
                <div class="mb-3">
                <label for="type">Type</label>
                </div>
                  <div class="custom-control custom-checkbox">
                    <input type="radio" class="custom-control-input" id="type" name="type" value="Food" required>
                    <label class="custom-control-label" for="food" >Food</label>
                  </div>
                <div class="custom-control custom-checkbox">
                  <input type="radio" class="custom-control-input" id="type" name="type" value="Cloth" required>
                  <label class="custom-control-label" for="Cloth" >Cloth</label>
                </div>

                <div class="custom-control custom-checkbox">
                  <input type="radio" class="custom-control-input" id="type" name="type" value="other" required>
                  <label class="custom-control-label" for="other" >other</label>
                </div>
        
                <div class="custom-control custom-checkbox">
                  <input type="radio" class="custom-control-input" id="type" name="type" value="Fund" required>
                  <label class="custom-control-label" for="Fund" >Fund</label>
                </div>
              </div>


              <hr class="mb-4">

                <div class="mb-2">
