      <main>
      
        <section class="py-5 text-center container">
          <div class="row py-lg-2">
            <div class="col-lg-6 col-md-8 mx-auto">
              <h1 class="fw-light">H.O.P</h1>
              <p class="lead text-muted">Help Other People</p>
            </div>
          </div>
        </section>
        <div class="mb-3">
        <div class="container px-4 bg-white" id="hanging-icons">
          <h2 class="pb-2 border-bottom">Donate reusable clothes</h2>
          <div class="row g-4 py-5 row-cols-1 row-cols-lg-3 bg-white">
            <% for (var i = 0; i < list  ; i++) { %>
            <div class="col d-flex align-items-start">
              <div>
                <h3 class="fs-2"> <%= name[i] %></h3>
                <p>We are <strong><%= name[i] %></strong> located in <strong><%= address[i] %></strong>. We have about <strong> <%= person[i] %></strong> people in need of cloth. Contact us via email <strong> <%= email[i] %> </strong> or Phone number <strong><%= phone[i] %></strong></p>
                <p>Bank Account: <span class="text-success"> <strong> <%= account[i] %></strong>  </span> </p>
                <a href="<%= name[i] %>" class="btn btn-primary">
                  Get in Touch
                </a>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
      
      <div class="bg-white  py-3">
